<%- layout('./layout/boilerplate.ejs') %>
<main class="container mt-5 w-50 border border-primary rounded px-4 py-4">
    <h1 class="mb-4">Create a Blog Post</h1>
    <form action="/blog" method="post">
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="Enter image URL">
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" aria-label="Default select example" id="category" name="category">
                <option selected>Open this select menu</option>
                <option value="story">Story</option>
                <option value="technology">Technology</option>
                <option value="health">Health and Wellness</option>
                <option value="lifestyle">Lifestyle</option>
                <option value="business">Business and Finance</option>
                <option value="education">Education</option>
                <option value="entertainment">Entertainment</option>
                <option value="food">Food and Drink</option>
                <option value="travel">Travel</option>
                <option value="parenting">Parenting</option>
                <option value="diy">DIY and Crafts</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content </label>
            <textarea class="form-control" id="content" name="content" rows="4" placeholder="Enter content"></textarea>
        </div>

        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
</main>
